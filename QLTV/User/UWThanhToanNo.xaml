<Window x:Class="QLTV.User.UWThanhToanNo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLTV.User"
        mc:Ignorable="d"
        Title="Thanh Toán Nợ" Height="800" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Quét mã QR sau để thanh toán" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30" FontWeight="Bold"/>
        <Rectangle Width="525" Height="525" x:Name="QRBox" Grid.Row="1" Margin="10">
            <Rectangle.Fill>
                <ImageBrush Stretch="UniformToFill"/>
            </Rectangle.Fill>
        </Rectangle>
        <TextBlock Text="Thư viện KHÔNG hỗ trợ hoàn tiền các trường hợp nhập sai thông tin, vì vậy vui lòng kiểm tra kỹ lại trước khi chuyển tiền."
                   Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center"
                   MaxWidth="550" TextWrapping="Wrap" FontSize="15" FontWeight="Bold"/>

    </Grid>
</Window>